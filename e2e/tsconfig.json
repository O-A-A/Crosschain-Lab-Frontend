{
    "compilerOptions": {
      "target": "esnext",                         // 设置编译后的 JavaScript 版本
      "module": "esnext",                         // 使用 ES 模块
      "moduleResolution": "node",                 // 模块解析策略
      "lib": ["ESNext", "dom"],                   // 需要的库，包含 es2020 和 DOM
      "allowJs": true,                            // 允许编译 JavaScript 文件
      "jsx": "preserve",                         // 保留 JSX，以便 Vue 3 支持
      "strict": true,                             // 开启严格模式，强类型检查
      "esModuleInterop": true,                    // 允许默认导入非 ES 模块
      "skipLibCheck": true,                       // 跳过库文件的类型检查，提升编译速度
      "forceConsistentCasingInFileNames": true,   // 强制文件名一致性
      "resolveJsonModule": true,                  // 支持导入 JSON 文件
      "isolatedModules": true,                    // 强制每个文件都是模块
      "noImplicitAny": true,                      // 禁止隐式的 any 类型
      "noUnusedLocals": true,                     // 检查未使用的本地变量
      "noUnusedParameters": true,                 // 检查未使用的函数参数
      "preserveConstEnums": true,                 // 保留常量枚举
      "skipDefaultLibCheck": true,                // 跳过默认库的类型检查
      "incremental": true,                        // 启用增量构建
      "tsBuildInfoFile": "./.tsbuildinfo",        // 生成增量构建信息
      "resolvePackageJsonExports": true           // 支持 package.json 的 exports 字段
    },
    "include": [
      "src/**/*.ts",                              // 包含所有 TypeScript 文件
      "src/**/*.d.ts",                            // 包含所有声明文件
      "src/**/*.tsx",                             // 包含所有 TSX 文件（如果使用）
      "src/**/*.vue"                              // 包含所有 Vue 文件
    ],
    "exclude": [
      "node_modules",                             // 排除 node_modules 文件夹
      "dist",                                     // 排除构建产物
      "public"                                    // 排除 public 文件夹
    ]
  }
  